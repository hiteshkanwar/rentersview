<script type="text/javascript"> 

  var latlng = new google.maps.LatLng(<%= if !@location.blank? then @location.latitude else '0' end %>, <%= if !@location.blank? then @location.longitude else '0' end %>);
  var myOptions = {
    zoom: 16,
    center: latlng,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };
  
  var map = new google.maps.Map(document.getElementById("locationMap"), myOptions);
  
  var marker = new google.maps.Marker({
    position: latlng,
    map: map,
    title: "<%= @location.address1 %>"
  });
  
</script>
