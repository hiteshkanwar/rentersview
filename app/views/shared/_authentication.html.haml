- if user_signed_in?
  %div.authentication.logued
    = image_tag(current_user.profile_image_url, width: 30)
    %span
      Hi #{current_user.name}
      = link_to 'Log out', destroy_user_session_path, :method => :delete,:style=>"text-shadow: 1px 1px 1px #404040;"
- else
  %div.authentication.not-logued
    %a.btn.icon-face{:href => user_omniauth_authorize_path(:facebook)}
      Sign in with Facebook
    %a.btn.icon-twitter{:href => user_omniauth_authorize_path(:twitter)}
      Sign in with Twitter
